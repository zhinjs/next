{
  "name": "zhin-next",
  "version": "0.0.1",
  "type": "module",
  "description": "Next-generation Hooks-style multi-platform chatbot framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "development": "./src/index.ts",
      "default": "./lib/index.js"
    },
    "./icqq": {
      "types": "./lib/adapters/icqq.d.ts",
      "development": "./src/adapters/icqq.ts",
      "default": "./lib/adapters/icqq.js"
    },
    "./terminal": {
      "types": "./lib/adapters/terminal.d.ts",
      "development": "./src/adapters/terminal.ts",
      "default": "./lib/adapters/terminal.js"
    },
    "./plugins/*": {
      "types": "./lib/plugins/*.d.ts",
      "development": "./src/plugins/*.ts",
      "default": "./lib/plugins/*.js"
    }
  },
  "keywords": [
    "chatbot",
    "bot",
    "qq",
    "icqq",
    "hooks",
    "plugin",
    "framework",
    "typescript"
  ],
  "homepage": "https://github.com/zhinjs/next#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhinjs/next.git"
  },
  "bugs": {
    "url": "https://github.com/zhinjs/next/issues"
  },
  "scripts": {
    "dev": "npx zhin --e src",
    "start": "npx zhin",
    "compile": "rollup -c",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "pub": "npm publish --access public"
  },
  "bin": {
    "zhin": "./bin.js"
  },
  "files": [
    "lib",
    "bin.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "packageManager": "pnpm@9.0.2",
  "author": "Zhin Team",
  "license": "ISC",
  "dependencies": {
    "@icqqjs/icqq": "latest",
    "@resvg/resvg-js": "^2.6.2",
    "@zhin.js/logger": "0.1.1",
    "@zhinjs/directive": "^0.1.5",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "^4.0.15",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
